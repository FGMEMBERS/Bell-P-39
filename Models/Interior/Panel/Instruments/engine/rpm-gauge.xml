<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>rpm-gauge.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>

    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/Bell-P-39/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>/engines/engine/rpm</property>
    <interpolation>
      <entry><ind>    0</ind><dep>   0 </dep></entry>
      <entry><ind>  500</ind><dep>  35 </dep></entry>
      <entry><ind> 1000</ind><dep>  68 </dep></entry>
      <entry><ind> 1500</ind><dep> 104 </dep></entry>
      <entry><ind> 2000</ind><dep> 140 </dep></entry>
      <entry><ind> 2500</ind><dep> 175 </dep></entry>
      <entry><ind> 3000</ind><dep> 211 </dep></entry>
      <entry><ind> 3500</ind><dep> 245 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
