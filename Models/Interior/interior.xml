<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intporteG</object-name>
    <object-name>intporteD</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitreporteG</object-name>
    <object-name>intvitreporteD</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intvitreporteG</object-name>
    <object-name>intvitreporteD</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intvitreporteG</object-name>
    <object-name>intvitreporteD</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Bell-P-39/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.538 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.451 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Bell-P-39/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -1.913 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.576 </z-m>
    </offsets>
  </model>

  <!-- Les portes -->
  <animation>
    <name>IntPorteGauche</name>
    <object-name>intvitreporteG</object-name>
    <object-name>intporteG</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPorteGauche</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> -65 </factor>
    <axis>
      <x1-m> -1.742 </x1-m>
      <y1-m> -0.442 </y1-m>
      <z1-m>  0.317 </z1-m>
      <x2-m> -1.730 </x2-m>
      <y2-m> -0.416 </y2-m>
      <z2-m>  0.474 </z2-m>
    </axis>
  </animation>

  <animation>
    <name>IntPorteDroite</name>
    <object-name>intvitreporteD</object-name>
    <object-name>intporteD</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPorteDroite</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <factor> -65 </factor>
    <axis>
      <x1-m> -1.730 </x1-m>
      <y1-m>  0.416 </y1-m>
      <z1-m>  0.474 </z1-m>
      <x2-m> -1.742 </x2-m>
      <y2-m>  0.442 </y2-m>
      <z2-m>  0.317 </z2-m>
    </axis>
  </animation>

</PropertyList>

